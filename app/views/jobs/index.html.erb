<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Scraper</th>
    <th>Title</th>
    <th>Business</th>
    <th>Url</th>
    <th>Posted at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td>
        <%  job.scrapers.each do |scraper| %>
        <%=   image_tag("/assets/#{scraper.icon}") %>
        <%  end %>
    </td>
    <td><%= job.title.capitalize %></td>
    <td><%= job.business.capitalize %></td>
    <td><%  job.jobs_scrapers.each do |job| %>
        <%=   job.url %>
        <%  end %></td>
    <td><%= job.posted_at %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Job', new_job_path %>
